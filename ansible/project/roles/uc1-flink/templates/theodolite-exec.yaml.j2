# vim: set ft=yaml:
apiVersion: theodolite.rocks/v1beta1
kind: execution
metadata:
  name: experiment
  namespace: default
spec:
  benchmark: "uc1-flink"
  load:
    loadType: "NumSensors"
    loadValues:
      - "{{ uc1_flink_loadValue }}"
  resources:
    resourceType: "Instances"
    resourceValues:
      - "{{ uc1_flink_resourceValue }}"
  execution:
    strategy:
      name: "RestrictionSearch"
      restrictions:
        - "LowerBound"
      searchStrategy: "FullSearch"
    duration: 120 # in seconds
    repetitions: 1
    loadGenerationDelay: 30 # in seconds
  configOverrides: []
  slos:
    - name: "Dummy SLO"
      properties:
        externalslourl: "http://kp-kube-prometheus-stack-prometheus.default.svc.cluster.local:9090"
        promqlquery: "sum by(instance) (up)"
        warmup: 60 # in seconds
        queryaggregation: count
        repetitionaggregation: sum
        operator: gte
        threshold: 0
