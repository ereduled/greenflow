# vim: set ft=yaml:
apiVersion: theodolite.rocks/v1beta1
kind: execution
metadata:
  name: {{ experiment_name }}
  namespace: default
spec:
  benchmark: {{ experiment_name }}
  load:
    loadType: "NumSensors"
    loadValues:
      - {{ experiment_params.load }}
  resources:
    resourceType: "Instances"
    resourceValues:
      - {{ experiment_params.instances }}
    configOverrides:
      - patcher:
          type: "NodeSelectorPatcher"
          resource: "uc3-flink-deployment.yaml"
          properties:
            variableName: "env"
          value: "prod"

  execution:
    strategy:
      name: "RestrictionSearch"
      restrictions:
        - "LowerBound"
      searchStrategy: "FullSearch"
    duration: {{ experiment_params.durationSeconds }} # in seconds
    repetitions: 1
    loadGenerationDelay: {{ experiment_params.warmupSeconds }}
  configOverrides: []
  slos:
    - name: "Dummy SLO"
      properties:
        externalSloUrl: "http://kp-kube-prometheus-stack-prometheus.default.svc.cluster.local:9090"
        promQLQuery: "sum by(instance) (up)"
        warmup: 60 # in seconds
        queryAggregation: count
        repetitionAggregation: sum
        operator: gte
        threshold: 0
