---
# vim: set ft=yaml:
kafkaClient:
  enabled: true
  nodeSelector:
    node-role.kubernetes.io/control-plane: "true"
strimzi:
  # Disabling strimzi in favour of deploying chart manually
  enabled: false
  kafka:
    replicas: 1
    kafkaExporter:
      template:
        pod:
          affinity:
            nodeAffinity:
              requiredDuringSchedulingIgnoredDuringExecution:
                nodeSelectorTerms:
                  - matchExpressions:
                      - key: node-role.kubernetes.io/control-plane
                        operator: In
                        values:
                          - "true"
    config:
      offsets.topic.replication.factor: 1
      transaction.state.log.replication.factor: 1
      transaction.state.log.min.isr: 1
      default.replication.factor: 1
      min.insync.replicas: 1
      # inter.broker.protocol.version: "3.3"
    entityOperator:
      template:
        topicOperatorContainer:
          env:
            - name: "STRIMZI_USE_ZOOKEEPER_TOPIC_STORE"
              value: "true"
        pod:
          affinity:
            nodeAffinity:
              requiredDuringSchedulingIgnoredDuringExecution:
                nodeSelectorTerms:
                  - matchExpressions:
                      - key: node-role.kubernetes.io/control-plane
                        operator: In
                        values:
                          - "true"
    template:
      pod:
        affinity:
          nodeAffinity:
            requiredDuringSchedulingIgnoredDuringExecution:
              nodeSelectorTerms:
                - matchExpressions:
                    - key: node-role.kubernetes.io/control-plane
                      operator: In
                      values:
                        - "true"
  zookeeper:
    replicas: 1
    zooEntrance:
      enabled: false
      zookeeperClient:
        nodeSelector:
          node-role.kubernetes.io/control-plane: "true"
    nodeselectorterms:
      - matchexpressions:
          - key: node-role.kubernetes.io/control-plane
            operator: In
            values:
              - "true"
  schemaRegistry:
    enabled: true
    nodeSelector:
      node-role.kubernetes.io/control-plane: "true"
prometheus:
  enabled: false
kube-prometheus-stack:
  grafana:
    enabled: false
  prometheusOperator:
    enabled: false
    nodeSelector:
      node-role.kubernetes.io/control-plane: "true"
prometheusOperator:
  nodeSelector:
    node-role.kubernetes.io/control-plane: "true"
alertmanager:
  alertmanagerSpec:
    nodeSelector:
      node-role.kubernetes.io/control-plane: "true"
kube-state-metrics:
  nodeSelector:
    node-role.kubernetes.io/control-plane: "true"
