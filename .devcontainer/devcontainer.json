// For format details, see https://aka.ms/vscode-remote/devcontainer.json or the definition README at
// https://github.com/microsoft/vscode-dev-containers/tree/master/containers/docker-existing-dockerfile
{
	"name": "nix-devcontainer-greenflow",
	"dockerFile": "Dockerfile",
	"context": "${localWorkspaceFolder}",
	// "updateContentCommand": "bash -li nix-env -i lorri",
	// "build": {
	// 	"args": {
	// 		"USER_UID": "1000",
	// 		"USER_GID": "1000"
	// 	}
	// },
	"runArgs": [
		"--network=host",
		"--security-opt",
		"label=disable"
	],
	"containerEnv": {
		"PRELOAD_EXTENSIONS": "arrterian.nix-env-selector",
		"KUBECONFIG": "${containerWorkspaceFolder}/kubeconfig",
		"GRID5000_USERNAME": "***REMOVED***",
		"GRID5000_PASSWORD": "hunter2"
	},
	"mounts": [
		"source=nix-cache,target=/nix,type=volume,consistency=cached",
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
		"source=/home/g/.ssh,target=/home/g/.ssh,type=bind",
		"source=/home/g/.kube,target=/home/g/.kube,type=bind",
		"source=/home/g/storage,target=/workspaces/greenflow/storage,type=bind",
		// "source=${localWorkspaceFolder}/.vscode/.pyenv-cache,target=/usr/local/share/app-scripts,type=bind,consistency=cached",
		"source=pacman-cache,target=/var/cache/pacman/pkg,type=volume,consistency=cached",
		"source=pyenv-cache,target=/home/g/.pyenv,type=volume,consistency=cached",
		"source=poetry-cache,target=/workspaces/greenflow/.vscode/.poetry.cache,type=volume,consistency=cached",
		// "source=venv-cache,target=/workspaces/greenflow/.venv,type=volume,consistency=cached",
		"source=local-cache,target=/home/g/.local/share,type=volume,consistency=cached"
	],
	"userEnvProbe": "loginShell",
	"overrideCommand": false,
	"updateRemoteUserUID": false,
	"onCreateCommand": "bash ${containerWorkspaceFolder}/.devcontainer/onCreate.sh",
	// build development environment on creation
	// "onCreateCommand": "nix-shell --command 'sh .devcontainer/onCreate.sh'",
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		// select nix environment
		"arrterian.nix-env-selector",
		// nix formatting and dev support
		"jnoortheen.nix-ide",
		// run command on save (needed to reload nix environment)
		// "fsevenm.run-it-on",
		// python support
		"ms-python.python",
		"redhat.vscode-yaml",
		"VisualStudioExptTeam.vscodeintellicode",
		"eamodio.gitlens"
		// "Rubymaniac.vscode-direnv"
	],
	"settings": {
		"python.formatting.blackPath": "/home/g/.pyenv/versions/mambaforge/envs/greenflow/bin/black",
		"isort.path": [
			"/home/g/.pyenv/versions/mambaforge/envs/greenflow/bin/isort"
		]
	},
	// 	"terminal.integrated.defaultProfile.linux": "fish",
	// 	"terminal.integrated.profiles.linux": {
	// 		"fish": {
	// 			"path": "fish"
	// 		},
	// 	}
	// },
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": []
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "go version",
}
